<%- include('./includes/head') %>
<%- include('./includes/navbar') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <h1 class="text-center">Login</h1>
        <p class="text-center lead">Faça o login ou crie sua conta abaixo</p>
        <div class="row">
          <div class="col-lg">
            <h4>Faça seu cadastro</h4>
            <p>Se você ainda não tem conta, preencha o formulário abaixo</p>
            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group mb-3">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="form-control" placeholder="Enter name">
              </div>
              <div class="form-group mb-3">
                <label for="lastName">LastName</label>
                <input type="text" class="form-control" id="lastName" placeholder="last Name">
              </div>
              <button type="submit" class="btn btn-primary">Criar minha conta</button>
            </form>
          </div>
          <div class="col-lg">
            <h4>Faça seu login</h4>
            <p>Se você já tem conta, faça seu login abaixo</p>
            <form action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group mb-3">
                <label for="email">Email address</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Enter email">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password">
              </div>
              <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-2"></div>
    </div>
  </div>
<%- include('./includes/footer') %>
    